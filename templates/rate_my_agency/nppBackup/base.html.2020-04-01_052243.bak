<!DOCTYPE html>
{% load static %}

<html>
	<head>
        
		<style>
            
            
			body{background-color: #DBD81B; font-family:"Helvetica"; }
			
			h1{color:black;font-size:40px;font-family:"Helvetica";
                position: relative;
                left: 276px;
                top: -20px;}
			
			a{color: #129494; font-family:"Helvetica"; font-size: 20px;}
			a:hover{ color: white; font-family:"Helvetica";}
			a:active{colour:red; font-family:"Helvetica";}
			
			.sidebar{height: 100%; width: 160px; position: fixed; z-index: 1;
				top: 0; left: 0; background-color: #111; overflow-x: hidden;
				padding-top: 20px;}
				
			.sidebar a{padding: 6px 8px 6px 16px; text-decoration: none;
				font-size: 25px; color: #818181; display: block;}
				
			.sidebar a:hover {color: #f1f1f1;}
			
			.main{margin-left: 160px; font-size: 16px; padding: 0px 10px;}
			
			@media screen and (max-height: 450px) {.sidebar {padding-top: 15px;} 
			.sidebar a {font-size: 18px;}}
			
			
			.button {
			  background-color: white; 
			  border: 2px solid black;
			  color: black;
			  padding: 8px 18px;
			  text-align: center;
			  text-decoration: none;
			  display: inline-block;
			  font-size: 16px;
			  margin: 4px 2px;
			  transition-duration: 0.4s;
			  cursor: pointer;
			}
			

			.button:hover {
			  background-color: black;
			  color: white;
			}
			
			.register {
			  background-color: white; 
			  border: 2px #DC2819;
			  color: black;
			  padding: 40px 60px;
			  text-align: center;
			  text-decoration: none;
			  display: inline-block;
			  font-size: 32px;
			  margin: 4px 2px;
			  transition-duration: 0.4s;
			  cursor: pointer;
			  float:center-left;
			}
			
			.register:hover {
			  background-color: #DC2819;
			  color: white;
			}
			
            img {
                border: 3px solid #fff;
                
                padding: 0px;
                width: 100px;
                position: relative;
                left: 170px;
                top: 20px;
                }  
            
		</style>
        <img src="{% static 'images/rmaLogo.jpg' %}"
            alt="RMA logo" />  
		<title>
			{% block title_block %}
				Rate my Agency!
			{% endblock %}
		</title>
	</head>
	
	<body>
		<div class="main">
		{% block body_block %}
		{% endblock %}
		</div>
		
		<div class="sidebar">
		<a href="{% url 'rate_my_agency:index' %}">Index</a>
		<a href="{% url 'rate_my_agency:about' %}">About</a>
		{% if user.is_authenticated %}
		<a href="{% url 'rate_my_agency:logout' %}">Logout</a>	
		{% else %}
		<a href="{% url 'rate_my_agency:register' %}">Register</a>
		<a href="{% url 'rate_my_agency:login' %}">Login</a>
		{% endif %}
		
		</div>
	</body>
</html>